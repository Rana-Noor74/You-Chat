<%- include('../partials/head'); %>
    <!-- <body data-layout="horizontal"> -->

        <!-- Begin page -->
        <div id="layout-wrapper">

            <!-- ========== Header ========== -->
            <%- include('../partials/header'); %>
            <!-- ========== Header End ========== -->

            <!-- ========== Left Sidebar Start ========== -->
            <%- include('../partials/sidebar'); %>
            <!-- Left Sidebar End -->

            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="main-content">

                <div class="page-content">
                    <div class="container-fluid">
                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                    <div class="col">
                                        <h4 class="mb-sm-0 font-size-18">
                                            Create Company
                                        </h4>
                                    </div>
                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">Company</a></li>
                                            <li class="breadcrumb-item active">Create Company</li>
                                        </ol>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <!-- end page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <div class="row">
                                            <div class="col-12">
                                                <h4 class="font-size-18 text-primary" style="margin-top: 12px!important;">
                                                    <i class="fa fa-user"></i> 
                                                    Create A New Company
                                                </h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body p-4">
                                        <div class="row  mb-20">
                                            <span class="showErrorStyle" id="createCompanyError">
                                               
                                            </span> 
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-6">
                                                <div class="mb-3">
                                                    <label for="example-text-input" class="form-label">Company Name*</label>
                                                    <input class="form-control" type="text" placeholder="Company Name"  id="companyName">
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="mb-3">
                                                    <label for="companyEmail" class="form-label">Company Email*</label>
                                                    <input class="form-control" type="text" placeholder="Company Email"  id="companyEmail">
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="mb-3">
                                                    <label for="companyPassword" class="form-label">Password*</label>
                                                    <div class="input-group">
                                                        <input type="password" class="form-control" id="companyPassword" placeholder="Enter password" >
                                                        <button class="show-hide" id="passwordFunction" value="0">
                                                            <i id="iconView" class="fa fa-eye text-primary"></i>
                                                        </button>
                                                    </div>
                                                    <div class="input-group">
                                                        <b><small class="text-info">**Password is Auto-Generated**</small></b> 
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="mb-3">
                                                    <label for="confirmPassword" class="form-label">Confirm Password*</label>
                                                    <input class="form-control" type="password" placeholder="Confirm Password"  id="confirmPassword">
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="mb-3">
                                                    <label for="companySMSLimit" class="form-label">Reset SMS Limit <small>(Outgoing)</small></label>
                                                    <select class="form-select" id="companySMSLimit">
                                                        <option value="500" selected disabled>--Select SMS Limit to reset</option>
                                                        <option value="500">500</option>
                                                        <option value="700">700</option>
                                                        <option value="1000">1000</option>
                                                    </select>
                                                    <b> <small class="text-success">**Current SMS Limit is Not Set Yet**</small> </b>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="mb-3">
                                                    <label for="companyCallService" class="form-label">Call Service <small>(Outgoing)</small></label>
                                                    <select class="form-select" id="companyCallService">
                                                        <option value="block" selected>Block</option>
                                                        <option value="unblock">Unblock</option>
                                                    </select>
                                                    <b><small class="text-danger">**Access Denied**</small></b>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="mb-3">
                                                    <label for="companySMSService" class="form-label">SMS Service <small>(Outgoing)</small></label>
                                                    <select class="form-select" id="companySMSService">
                                                        <option value="block">Block</option>
                                                        <option value="unblock" selected>Unblock</option>
                                                    </select>
                                                    <b><small class="text-success">**Access Granted**</small></b>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row justify-content-center">
                                            <button class="btn btn-primary customBtnWidth" id="creatCompany-btn">
                                                Create Company
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <!-- end cardaa -->
                            </div> <!-- end col -->
                        </div> 
                        <!-- end row -->
                    </div>
                    <!-- container-fluid -->
                </div>
                <!-- End Page-content -->
                <%- include('../partials/footer'); %>
            </div>
            <!-- end main content-->

        </div>
        <!-- END layout-wrapper -->
        <%- include('../partials/right-sidebar'); %>
        <!-- Right bar overlay-->
        <div class="rightbar-overlay"></div>
        <%- include('../partials/modal'); %>
        <script src="<%= (process.env.SERVER_TYPE == 'STAGING') ? process.env.LOCAL_URL : process.env.LIVE_URL %>/admin/assets/customjs/admin/create-company.js"></script>
<%- include('../partials/foot'); %>
